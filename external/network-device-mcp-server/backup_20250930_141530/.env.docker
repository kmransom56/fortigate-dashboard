# Network Device MCP Server - Docker Environment Configuration
# Copy this file to .env and update with your actual values

# FortiManager Connection Details
FMG_IP=10.128.145.4
FMG_USERNAME=your_username
FMG_PASSWORD=your_password

# Administrative Domain (ADOM) Configuration
ADOM_NAME=root

# Device Configuration
DEVICE_NAME=your-firewall-name

# SSL/TLS Configuration
VERIFY_SSL=true
CA_BUNDLE=

# Session Configuration
FMG_SESSION_TTL=300

# Application Configuration
HOST=0.0.0.0
PORT=12000
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/network_mcp_server.log
