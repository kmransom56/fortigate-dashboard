# Network MCP Server Configuration
# Copy this file to .env and update the values

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Vault Configuration
VAULT_ENABLED=True
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=root-token
VAULT_SECRET_PREFIX=network-mcp

# Database Configuration
DATABASE_URL=sqlite:///./network-mcp.db

# API Settings
API_HOST=0.0.0.0
API_PORT=12000

# Security Settings
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
ALGORITHM=HS256

# FortiManager Settings (if not using Vault)
FORTIMANAGER_IP=
FORTIMANAGER_USERNAME=
FORTIMANAGER_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/network-mcp.log
